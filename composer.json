{
    "name": "php-censor/php-censor",
    "description": "PHP Censor is a open source self-hosted continuous integration server for PHP projects (PHPCI fork).",
    "minimum-stability": "stable",
    "type": "application",
    "keywords": [
        "php",
        "php-censor",
        "phpci",
        "ci-server",
        "testing",
        "self-hosted",
        "open-source",
        "ci",
        "continuous integration"
    ],
    "homepage": "http://php-censor.info",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Dmitry Khomutov",
            "email": "poisoncorpsee@gmail.com",
            "homepage": "http://corpsee.com",
            "role": "PHP Censor developer"
        },
        {
            "name": "Dan Cryer",
            "email": "dan.cryer@block8.co.uk",
            "homepage": "http://www.block8.co.uk",
            "role": "PHPCI developer"
        }
    ],
    "support": {
        "issues": "https://github.com/php-censor/php-censor/issues",
        "source": "https://github.com/php-censor/php-censor"
    },
    "autoload": {
        "psr-4": {
            "PHPCensor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\PHPCensor\\": "tests/src/"
        }
    },
    "require": {
        "php": ">=7.4.0|^8.0",
        "ext-openssl": "*",
        "ext-PDO": "*",
        "ext-json": "*",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-SimpleXML": "*",
        "ext-curl": "*",
        "ext-bcmath": "*",

        "php-censor/common": "^1.0",

        "swiftmailer/swiftmailer": "^6.3",
        "symfony/http-foundation": "^6.0",
        "symfony/yaml": "^6.0",
        "symfony/console": "^6.0",
        "symfony/finder": "^6.0",
        "symfony/dom-crawler": "^6.0",
        "symfony/css-selector": "^6.0",
        "symfony/browser-kit": "^6.0",
        "symfony/process": "^6.0",
        "symfony/filesystem": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/event-dispatcher": "^6.0",
        "symfony/cache": "^6.0",
        "psr/log": "^2.0",
        "monolog/monolog": "^3.0",
        "pimple/pimple": "^3.5",
        "robmorgan/phinx": "^0.13.0",
        "sensiolabs/ansi-to-html": "^1.2",
        "pda/pheanstalk": "^4.0",
        "guzzlehttp/guzzle": "^7.0",
        "jasongrimes/paginator": "^1.0",
        "voku/anti-xss": "^4.1",
        "sebastian/diff": "^4.0",

        "maknz/slack": "^1.7",
        "php-censor/flowdock-client": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "infection/infection": "^0.26",
        "phpspec/prophecy-phpunit": "^2.0",
        "squizlabs/php_codesniffer": "^3.7",
        "sebastian/phpcpd": "^6.0",
        "phploc/phploc": "^7.0",
        "phpmd/phpmd": "^2.13",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "php-censor/phpdoc-checker": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.13",
        "symfony/var-dumper": "^6.0",
        "vimeo/psalm": "^5.0",
        "rector/rector": "^0.15"
    },
    "extra": {
        "platform": {
            "php": "7.4.*|^8.0"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
